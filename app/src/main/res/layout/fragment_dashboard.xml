<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_background_color"
        tools:context="com.byteshaft.doosra.fragments.Dashboard">


        <LinearLayout
            android:id="@+id/logo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/line_part_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Medical Second"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/app_name_doosra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/line_part_one"
                    android:text=" (Doosra)"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/line_part_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Opinion At Your Finger"
                android:textAllCaps="true"
                android:textColor="@color/black_color"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/logo_layout"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_how_it_works"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:text="How it Works"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:theme="@style/ButtonGreen" />

                <Button
                    android:id="@+id/button_about_us"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:text="About Us"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:theme="@style/MyButton" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_board_of_doctors"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:text="Board of Doctors"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:theme="@style/MyButton" />

                <Button
                    android:id="@+id/button_get_a_second_opinion"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:text="Get a Second opinion"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:theme="@style/ButtonGreen" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>