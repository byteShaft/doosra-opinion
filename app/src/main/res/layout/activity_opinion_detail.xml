<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/screen_background_color">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_background_color"
        android:padding="10dp"
        tools:context="com.byteshaft.doosra.OpinionDetail">


        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Shahid Ghafoor"
                android:textSize="20sp" />


            <!--<TextView-->
            <!--android:id="@+id/tv_type"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center"-->
            <!--android:text="Opinion"-->
            <!--android:textSize="16sp" />-->
        </LinearLayout>


        <LinearLayout
            android:id="@+id/details_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_w"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Weight (kg)" />

                <TextView
                    android:id="@+id/weigh_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="57" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_h"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Height (ft)" />

                <TextView
                    android:id="@+id/height_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="6" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_concern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_one"
            android:layout_marginTop="20dp"
            android:text="Concern: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/concern_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_concern"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="4dp"
            android:text="Little concern " />

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/concern_"
            android:layout_marginTop="20dp"
            android:text="Short History: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/history_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_history"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="4dp"
            android:text="Little History " />

        <TextView
            android:id="@+id/tv_disease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/history_"
            android:layout_marginTop="20dp"
            android:text="History: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/disease_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_disease"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="4dp"
            android:text="Disease  " />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/disease_"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Attached Files"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/medical_summary"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:text="Medical Summary"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/lab_result_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:text="Lab Result"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/xray_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:text="X-ray/Scan Reports"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/other_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:text="Other Reports"
                android:textAllCaps="false" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>